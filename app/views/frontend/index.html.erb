<style>
    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(2deg); }
    }

    @keyframes pulse-glow {
        0%, 100% { box-shadow: 0 0 20px rgba(139, 92, 246, 0.3); }
        50% { box-shadow: 0 0 40px rgba(139, 92, 246, 0.6); }
    }

    @keyframes gradient-shift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .floating-element {
        animation: float 6s ease-in-out infinite;
    }

    .floating-element:nth-child(2) {
        animation-delay: -2s;
    }

    .floating-element:nth-child(3) {
        animation-delay: -4s;
    }

    .gradient-bg {
        background: linear-gradient(-45deg, #1e1b4b, #312e81, #7c3aed, #a855f7);
        background-size: 400% 400%;
        animation: gradient-shift 15s ease infinite;
    }

    .glow-button {
        animation: pulse-glow 2s ease-in-out infinite;
    }

    .text-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>

<section class="relative min-h-screen gradient-bg overflow-hidden">
  <!-- Background Decoration -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-10 w-72 h-72 bg-purple-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 floating-element"></div>
    <div class="absolute top-40 right-20 w-96 h-96 bg-blue-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 floating-element"></div>
    <div class="absolute bottom-20 left-1/3 w-80 h-80 bg-pink-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 floating-element"></div>
  </div>

  <!-- Grid Pattern Overlay -->
  <div class="absolute inset-0 opacity-10">
    <div class="h-full w-full" style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 50px 50px;"></div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 container mx-auto px-6 pt-20 pb-16">
    <!-- Navigation -->
    <nav class="flex items-center justify-between mb-20">
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-gradient-to-r from-purple-400 to-pink-400 rounded-lg"></div>
        <span class="text-white font-bold text-xl">BuildCraft</span>
      </div>
      <div class="hidden md:flex items-center space-x-8">
        <a href="#" class="text-purple-200 hover:text-white transition-colors">Features</a>
        <a href="#" class="text-purple-200 hover:text-white transition-colors">Templates</a>
        <a href="#" class="text-purple-200 hover:text-white transition-colors">Pricing</a>
        <% if current_user %>
          <%= link_to "Log out", destroy_user_session_path, class: 'bg-white text-purple-900 px-6 py-2 rounded-full font-semibold hover:bg-purple-50 transition-all transform hover:scale-105', data: { "turbo-method": :delete } %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: 'bg-white text-purple-900 px-6 py-2 rounded-full font-semibold hover:bg-purple-50 transition-all transform hover:scale-105' %>
        <% end %>

      </div>
    </nav>

    <!-- Hero Content -->
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left Column -->
      <div class="text-center lg:text-left">
        <h1 class="text-5xl lg:text-7xl font-bold text-white mb-8 leading-tight">
          Build
          <span class="text-gradient block">Stunning</span>
          Websites in Minutes
        </h1>

        <p class="text-xl text-purple-100 mb-10 max-w-xl">
          Drag, drop, and deploy. No coding required. Create professional websites with our intuitive builder and watch your ideas come to life instantly.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <button class="glow-button bg-gradient-to-r from-purple-500 to-pink-500 text-white px-8 py-4 rounded-full text-lg font-semibold hover:from-purple-600 hover:to-pink-600 transition-all transform hover:scale-105">
            Start Building Free
          </button>
          <button class="border-2 border-purple-300 text-purple-100 px-8 py-4 rounded-full text-lg font-semibold hover:bg-purple-300 hover:text-purple-900 transition-all">
            Watch Demo
          </button>
        </div>

        <!-- Stats -->
        <div class="flex justify-center lg:justify-start space-x-8 mt-12 text-purple-200">
          <div class="text-center">
            <div class="text-2xl font-bold text-white">50K+</div>
            <div class="text-sm">Websites Created</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-white">99.9%</div>
            <div class="text-sm">Uptime</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-white">24/7</div>
            <div class="text-sm">Support</div>
          </div>
        </div>
      </div>

      <!-- Right Column - Visual Elements -->
      <div class="relative">
        <!-- Main Dashboard Mockup -->
        <div class="relative bg-white/10 backdrop-blur-lg rounded-2xl p-8 border border-white/20">
          <div class="bg-white rounded-xl p-6 shadow-2xl">
            <!-- Browser Header -->
            <div class="flex items-center space-x-2 mb-4 pb-4 border-b">
              <div class="w-3 h-3 bg-red-400 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
              <div class="w-3 h-3 bg-green-400 rounded-full"></div>
              <div class="flex-1 bg-gray-100 rounded-full px-4 py-1 ml-4">
                <div class="text-xs text-gray-500">yoursite.com</div>
              </div>
            </div>

            <!-- Website Preview -->
            <div class="space-y-4">
              <div class="h-8 bg-gradient-to-r from-purple-400 to-pink-400 rounded"></div>
              <div class="grid grid-cols-3 gap-3">
                <div class="h-12 bg-gray-200 rounded"></div>
                <div class="h-12 bg-gray-200 rounded"></div>
                <div class="h-12 bg-gray-200 rounded"></div>
              </div>
              <div class="h-20 bg-gray-100 rounded"></div>
              <div class="grid grid-cols-2 gap-3">
                <div class="h-16 bg-gray-200 rounded"></div>
                <div class="h-16 bg-gray-200 rounded"></div>
              </div>
            </div>
          </div>

          <!-- Floating UI Elements -->
          <div class="absolute -top-4 -right-4 bg-purple-500 text-white px-4 py-2 rounded-lg text-sm font-semibold floating-element">
            Drag & Drop
          </div>
          <div class="absolute -bottom-4 -left-4 bg-pink-500 text-white px-4 py-2 rounded-lg text-sm font-semibold floating-element">
            Auto-Save
          </div>
          <div class="absolute top-1/2 -right-8 bg-blue-500 text-white px-3 py-2 rounded-lg text-xs font-semibold floating-element">
            Live Preview
          </div>
        </div>

        <!-- Decorative Elements -->
        <div class="absolute -top-8 -left-8 w-16 h-16 bg-yellow-400 rounded-full opacity-80 floating-element"></div>
        <div class="absolute -bottom-6 -right-6 w-12 h-12 bg-green-400 rounded-full opacity-80 floating-element"></div>
      </div>
    </div>

    <!-- Trust Indicators -->
    <div class="mt-20 text-center">
      <p class="text-purple-200 mb-8">Trusted by teams worldwide</p>
      <div class="flex justify-center items-center space-x-12 opacity-60">
        <div class="text-white font-bold text-lg">Startup Inc</div>
        <div class="text-white font-bold text-lg">TechCorp</div>
        <div class="text-white font-bold text-lg">DesignCo</div>
        <div class="text-white font-bold text-lg">BuilderPro</div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
    <div class="w-6 h-10 border-2 border-purple-300 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-purple-300 rounded-full mt-2 animate-bounce"></div>
    </div>
  </div>
</section>