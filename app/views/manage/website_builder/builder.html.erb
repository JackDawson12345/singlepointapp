<!-- app/views/manage/website_builder/builder.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Website Builder - <%= @website.name %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "website_editor", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <%= javascript_include_tag "website_editor", "data-turbo-track": "reload" %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
</head>

<body class="website-builder-container">
<!-- Builder Header -->
<div class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 z-30 h-16">
  <div class="flex items-center justify-between h-full px-4">
    <div class="flex items-center space-x-4">
      <h1 class="text-xl font-semibold text-gray-900">Website Builder</h1>
      <span class="text-sm text-gray-500">Editing: <%= @website.name %></span>
    </div>

    <div class="flex items-center space-x-3">
      <%= link_to "Settings", manage_website_settings_path,
                  class: "px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
      <%= link_to "Preview", manage_preview_website_path,
                  target: "_blank",
                  class: "px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
      <%= link_to "Dashboard", manage_dashboard_path,
                  class: "px-3 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700" %>
    </div>
  </div>
</div>

<!-- Builder Sidebar -->
<div class="builder-sidebar pt-16">
  <div class="p-4">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Pages</h2>

    <div class="space-y-2">
      <% @websitePages.order(:component_order).each do |page| %>
        <div class="page-item <%= 'active' if page == @homePage %>" data-page-id="<%= page.id %>">
          <button class="w-full text-left px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md <%= 'bg-blue-50 text-blue-700' if page == @homePage %>">
            <%= page.page_type %>
          </button>
        </div>
      <% end %>
    </div>

    <!-- Component Library (for future expansion) -->
    <div class="mt-8">
      <h3 class="text-md font-medium text-gray-900 mb-3">Components</h3>
      <div class="text-sm text-gray-500">
        <p>Click on any component in the preview to edit it.</p>
      </div>
    </div>

    <!-- Website Stats -->
    <div class="mt-8 p-3 bg-gray-50 rounded-md">
      <h4 class="text-sm font-medium text-gray-900 mb-2">Website Stats</h4>
      <div class="space-y-1 text-xs text-gray-600">
        <div>Pages: <%= @websitePages.count %></div>
        <div>Components: <%= @components.count %></div>
        <div>Customizations: <%= @website.website_customizations.count %></div>
      </div>
    </div>
  </div>
</div>

<!-- Main Builder Content -->
<div class="builder-content pt-16">
  <div class="page-preview">
    <!-- Page Header -->
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-medium text-gray-900">
          <%= @homePage.page_type %> Page
        </h2>
        <div class="text-sm text-gray-500">
          <%= pluralize(@components.count, 'component') %>
        </div>
      </div>
    </div>

    <!-- Page Content -->
    <div class="page-content">
      <% @components.each do |component| %>
        <div class="component-wrapper">
          <%= render_component_for_website(component, @homePage, @website) %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Empty State -->
  <% if @components.empty? %>
    <div class="text-center py-12">
      <div class="text-gray-400 mb-4">
        <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Components Found</h3>
      <p class="text-gray-500">This page doesn't have any components yet. Contact your administrator to add components to this theme.</p>
    </div>
  <% end %>
</div>

<!-- Mobile Notice -->
<div class="lg:hidden fixed bottom-4 left-4 right-4 bg-blue-50 border border-blue-200 rounded-md p-4 z-40">
  <div class="flex">
    <div class="flex-shrink-0">
      <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="ml-3">
      <p class="text-sm text-blue-800">
        For the best editing experience, please use a desktop or tablet device.
      </p>
    </div>
  </div>
</div>

<!-- Include editor JavaScript -->
<script>
    // Pass Rails data to JavaScript
    window.builderData = {
        websiteId: <%= @website.id %>,
        currentPageId: <%= @homePage.id %>,
        components: <%= raw @components.map { |c| { id: c.id, name: c.name, editable_fields: c.editable_fields_array } }.to_json %>
    };
</script>
</body>
</html>