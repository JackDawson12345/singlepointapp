<%= form_with url: manage_website_create_save_path, local: true, class: "max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-8 space-y-6" do |form| %>
  <!-- Domain Name Field -->
  <div class="space-y-2">
    <%= form.label :domain_name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :domain_name,
                        value: @user.account_setup.domain_name,
                        readonly: true,
                        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-50 text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <!-- Website Name Field -->
  <div class="space-y-2">
    <%= form.label :website_name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :website_name,
                        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out",
                        placeholder: "Enter your website name" %>
  </div>

  <!-- Theme Selection -->
  <div class="space-y-3">
    <%= form.label :theme_id, "Select Theme", class: "block text-sm font-medium text-gray-700" %>
    <div class="space-y-3">
      <% Theme.all.each do |theme| %>
        <div class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition duration-150 ease-in-out">
          <%= form.radio_button :theme_id, theme.id,
                                class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
          <%= form.label "theme_id_#{theme.id}", theme.name,
                         class: "ml-3 block text-sm font-medium text-gray-700 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Submit Button -->
  <div class="pt-4">
    <%= form.submit "Save",
                    class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-150 ease-in-out cursor-pointer" %>
  </div>
<% end %>