<div class="text-center mb-8">
  <h2 class="text-3xl font-bold text-gray-900 mb-2">Payment Method</h2>
  <p class="text-lg text-gray-600">Choose how you'd like to pay for your package</p>
</div>

<div class="space-y-6">
  <% if @account_setup.errors[:payment_method].any? %>
    <div class="text-red-600 text-sm mb-4">
      <%= @account_setup.errors[:payment_method].first %>
    </div>
  <% end %>

  <!-- Order Summary -->
  <div class="bg-gray-50 rounded-lg p-6 mb-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Order Summary</h3>
    <div class="space-y-2">
      <div class="flex justify-between">
        <span class="text-gray-600">Package:</span>
        <span class="font-medium"><%= @account_setup.package_type || 'Not selected' %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Domain:</span>
        <span class="font-medium"><%= @account_setup.domain_name || 'Not selected' %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Support:</span>
        <span class="font-medium"><%= @account_setup.support_option || 'Not selected' %></span>
      </div>
      <hr class="my-3">
      <div class="flex justify-between text-lg font-semibold">
        <span>Total:</span>
        <span>Â£<%= @account_setup.package_price %></span>
      </div>
    </div>
  </div>

  <!-- Payment Method Selection -->
  <div class="space-y-4">
    <label class="relative block cursor-pointer">
      <%= form.radio_button :payment_method, "stripe",
                            name: "account_setup[payment_method]",
                            class: "sr-only peer",
                            checked: @account_setup.payment_method == "stripe" %>
      <div class="border-2 border-gray-200 rounded-lg p-6 hover:border-blue-300 peer-checked:border-blue-500 peer-checked:bg-blue-50 transition-all">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
        </div>
      </div>
    </label>
  </div>

  <!-- Security Notice -->
  <div class="bg-green-50 border border-green-200 rounded-md p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-green-700">
          <strong>Secure Payment:</strong> Your payment information is encrypted and processed securely through Stripe. We never store your card details on our servers.
        </p>
      </div>
    </div>
  </div>

  <!-- Terms and Conditions -->
  <div class="border-t border-gray-200 pt-6">
    <label class="flex items-start">
      <input type="checkbox" class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" required>
      <span class="ml-2 text-sm text-gray-600">
        I agree to the <a href="#" class="text-blue-600 hover:text-blue-500">Terms of Service</a> and <a href="#" class="text-blue-600 hover:text-blue-500">Privacy Policy</a>
      </span>
    </label>
  </div>
</div>