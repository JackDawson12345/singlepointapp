<% if notice %>
  <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-green-800"><%= notice %></p>
      </div>
    </div>
  </div>
<% end %>

<% content_for :title, "Themes" %>

<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Themes</h1>
    <%= link_to "New theme", new_admin_theme_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
  </div>

  <div id="admin_themes" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @themes.each do |theme| %>
      <div class="bg-white rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition-shadow duration-200 overflow-hidden">
        <div class="relative">
          <img class="h-48 w-full object-cover" src="<%= theme.placeholder_image %>" alt="<%= theme.name %> preview">
          <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
        </div>

        <div class="p-6">
          <div class="space-y-1">
            <div class="flex justify-between items-start">
              <h3 class="text-lg font-semibold text-gray-900 leading-tight"><%= theme.name %></h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 ml-2 flex-shrink-0">
                <%= pluralize(theme.theme_pages.count, 'page') %>
              </span>
            </div>

            <div>
              <p class="text-gray-700 mt-1 leading-relaxed"><%= theme.description %></p>
            </div>
          </div>

          <div class="mt-6 pt-4 border-t border-gray-100">
            <div class="flex items-center justify-between gap-2">
              <%= link_to "View", admin_theme_path(theme), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-blue-600 hover:text-blue-700 hover:bg-blue-50 rounded-md transition duration-200" %>

              <%= link_to "Edit", edit_admin_theme_path(theme), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-yellow-600 hover:text-yellow-700 hover:bg-yellow-50 rounded-md transition duration-200" %>

              <%= button_to "Delete", admin_theme_path(theme), method: :delete,
                            class: "inline-flex items-center px-3 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-md transition duration-200",
                            data: { confirm: "Are you sure you want to delete this theme?" },
                            form: { class: "inline" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>