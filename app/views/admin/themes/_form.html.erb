<%= form_with(model: [:admin, @theme], local: true, class: "space-y-6") do |form| %>
  <!-- Error Messages -->
  <% if @theme.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 rounded-r-lg p-4 animate-pulse">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-semibold text-red-800 mb-2">
            <%= pluralize(@theme.errors.count, "error") %> prohibited this theme from being saved:
          </h3>
          <ul class="text-sm text-red-700 space-y-1">
            <% @theme.errors.each do |error| %>
              <li class="flex items-start">
                <span class="w-1.5 h-1.5 bg-red-400 rounded-full mt-2 mr-2 flex-shrink-0"></span>
                <%= error.full_message %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Name Field -->
  <div class="space-y-2">
    <%= form.label :name, class: "block text-sm font-semibold text-gray-700" do %>
      Theme Name
      <span class="text-red-500 ml-1">*</span>
    <% end %>
    <%= form.text_field :name,
                        placeholder: "Enter theme name...",
                        class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400" %>
  </div>

  <!-- Description Field -->
  <div class="space-y-2">
    <%= form.label :description, class: "block text-sm font-semibold text-gray-700" do %>
      Description
      <span class="text-gray-400 text-xs font-normal ml-1">(Optional)</span>
    <% end %>
    <%= form.text_area :description,
                       rows: 4,
                       placeholder: "Describe your theme...",
                       class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400 resize-none" %>
  </div>

  <!-- Placeholder Image Field -->
  <div class="space-y-2">
    <%= form.label :placeholder_image, class: "block text-sm font-semibold text-gray-700" do %>
      Placeholder Image URL
      <span class="text-gray-400 text-xs font-normal ml-1">(Optional)</span>
    <% end %>
    <%= form.url_field :placeholder_image,
                       placeholder: "https://example.com/image.jpg",
                       class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400" %>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-gray-200">
    <%= form.submit "Create Theme",
                    class: "flex-1 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transform hover:scale-[1.02] active:scale-[0.98] shadow-md hover:shadow-lg" %>

    <%= link_to "Cancel", admin_themes_path,
                class: "flex-1 sm:flex-initial bg-white border-2 border-gray-300 text-gray-700 font-semibold py-3 px-6 rounded-lg transition-all duration-200 ease-in-out hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 text-center" %>
  </div>
<% end %>