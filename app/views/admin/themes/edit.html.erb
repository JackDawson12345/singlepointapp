<% content_for :title, "Editing theme" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Edit Theme</h1>

      <!-- Breadcrumb Navigation -->
      <nav class="flex items-center text-sm" aria-label="Breadcrumb">
        <%= link_to admin_themes_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200 group" do %>
          <svg class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to themes
        <% end %>
        <svg class="w-4 h-4 mx-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-500 font-medium">Editing theme</span>
      </nav>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
      <div class="px-6 py-8">
        <%= render "form", admin_theme: @admin_theme %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-3">
      <%= link_to admin_theme_path(@theme), class: "inline-flex items-center justify-center px-6 py-3 border-2 border-blue-300 text-blue-700 bg-blue-50 font-semibold rounded-lg transition-all duration-200 ease-in-out hover:bg-blue-100 hover:border-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 group" do %>
        <svg class="w-4 h-4 mr-2 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        View Theme
      <% end %>

      <%= link_to admin_themes_path, class: "inline-flex items-center justify-center px-6 py-3 border-2 border-gray-300 text-gray-700 bg-white font-semibold rounded-lg transition-all duration-200 ease-in-out hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 group" do %>
        <svg class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Themes
      <% end %>
    </div>

    <!-- Theme Info Card -->
    <div class="mt-6 bg-amber-50 border border-amber-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-amber-700">
            <strong>Note:</strong> Changes to this theme will be applied immediately. Make sure to test your changes before saving if this theme is currently in use.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>